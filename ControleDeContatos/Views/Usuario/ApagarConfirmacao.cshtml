@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação Apagar Usuário";
}

<div class="text-center">
    <h3>Deseja apagar o usuário @Model.Nome?</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Usuario" asp-action="Index">Cancelar</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Usuario" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar</a>